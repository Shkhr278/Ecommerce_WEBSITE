{
  "name": "localspark",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --watch --enable-source-maps server/index.js",
    "dev:client": "vite --config vite.config.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --config vite.config.js",
    "build:server": "esbuild server/index.js --bundle --platform=node --outfile=dist/server/index.js --external:express --external:express-session",
    "start": "node dist/server/index.js",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wouter": "^3.2.0",
    "@tanstack/react-query": "^5.28.0",
    "react-hook-form": "^7.48.0",
    "zod": "^3.22.4",
    "tailwindcss": "^3.3.6",
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss-animate": "^1.0.7",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.1",
    "@radix-ui/react-slot": "^2.0.2",
    "@radix-ui/react-accordion": "^1.0.4",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "nanoid": "^4.0.2",
    "drizzle-orm": "^0.29.1",
    "pg": "^8.11.3",
    "drizzle-zod": "^0.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.8",
    "esbuild": "^0.19.11",
    "concurrently": "^8.2.2",
    "@replit/vite-plugin-runtime-error-modal": "^0.0.5",
    "@replit/vite-plugin-cartographer": "^0.0.2",
    "drizzle-kit": "^0.20.10"
  }
}
